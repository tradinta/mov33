{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public and private profile data.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID, same as their Auth UID."
        },
        "displayName": {
          "type": "string",
          "description": "The user's public display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
            "type": "string",
            "format": "uri",
            "description": "URL of the user's profile picture."
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "Timestamp of when the user account was created."
        }
      },
      "required": ["uid", "email"]
    },
    "Event": {
      "title": "Event",
      "description": "Represents a single event listing.",
      "type": "object",
      "properties": {
        "organizerId": { "type": "string", "description": "The UID of the user who organized the event." },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "venue": { "type": "string" },
        "location": { "type": "string" },
        "about": { "type": "string" },
        "tags": { "type": "string" },
        "mainImage": { "type": "string", "format": "uri" },
        "tickets": {
          "type": "array",
          "items": { "$ref": "#/entities/TicketTier" }
        }
      },
      "required": ["organizerId", "name", "date", "venue", "location", "mainImage"]
    },
    "Tour": {
      "title": "Tour",
      "description": "Represents a tour package listing.",
      "type": "object",
      "properties": {
        "organizerId": { "type": "string", "description": "The UID of the user who organized the tour." },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "duration": { "type": "string" },
        "destination": { "type": "string" },
        "highlights": { "type": "string" },
        "includes": { "type": "string" },
        "notIncludes": { "type": "string" },
        "privateBooking": { "type": "boolean" },
        "minGuests": { "type": "number" },
        "maxGuests": { "type": "number" },
        "location": { "type": "string" },
        "about": { "type": "string" },
        "tags": { "type": "string" },
        "mainImage": { "type": "string", "format": "uri" }
      },
       "required": ["organizerId", "name", "duration", "destination", "mainImage"]
    },
    "TicketTier": {
      "title": "Ticket Tier",
      "description": "Defines a pricing tier for an event ticket.",
      "type": "object",
      "properties": {
        "tier": { "type": "string" },
        "price": { "type": "number" },
        "description": { "type": "string" },
        "perks": { "type": "string" }
      },
      "required": ["tier", "price"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/events/{eventId}": {
        "schema": { "$ref": "#/entities/Event" },
        "description": "Stores all event listings."
    },
    "/tours/{tourId}": {
        "schema": { "$ref": "#/entities/Tour" },
        "description": "Stores all tour listings."
    }
  }
}
